
public class Program {
	public static void Main(String[] args){
		int a = 1;
		int b = 2;
		int c = 3;

		//A
		a += b;
		System.out.println(a);

		//B
		a -= 1;
		System.out.println(a);

		//C
		a *= (b-1);
		System.out.println(a);

		//D
		a = 0;
		String x = new Integer(a).toString();
		b = 0;
		String y = new Integer(b).toString();
		c = 0;
		String z = new Integer(c).toString();
		System.out.println("{0},{1},{2}",a,b,c);
	}
}